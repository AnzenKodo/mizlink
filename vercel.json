{
  "name": "HTML Redirect Website",
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
      { "source": "/sites/", "destination": "/" }
    ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src https:"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
